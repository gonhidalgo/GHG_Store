<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <Button fx:id="loginbutton" layoutX="100.0" layoutY="261.0" mnemonicParsing="false" onAction="#loginButtonAction" text="Login">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <TextField fx:id="lblusername" layoutX="88.0" layoutY="131.0" promptText="Username">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <PasswordField fx:id="lblpassword" layoutX="88.0" layoutY="202.0" promptText="Password">
         <font>
            <Font size="18.0" />
         </font>
      </PasswordField>
      <Label fx:id="lbltitle" alignment="CENTER" layoutX="61.0" layoutY="63.0" prefHeight="40.0" prefWidth="277.0" text="Login" textFill="#181818">
         <font>
            <Font size="32.0" />
         </font>
      </Label>
      <Label fx:id="loginStatus" alignment="CENTER" layoutX="69.0" layoutY="325.0" prefHeight="28.0" prefWidth="305.0" text="Please, enter your credentials" />
      <Button fx:id="signupbutton" layoutX="226.0" layoutY="261.0" mnemonicParsing="false" onAction="#signUp" text="Sign Up">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
